<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="myLogger" class="impl.LoggerImpl">
        <property name="name" value="MyLogger"/>
        <property name="version" value="1.00"/>
    </bean>
    <!-- HERE WE HAVE TO REMEMBER ABOUT ORDER THE ARGUMENT BUT WE CAN USE NAME OR INDEX -->
    <!-- IN CASE WHEN NAME & INDEX ARE NOT THE SAME THEN JAVA RETURN EXCEPTION DURING TRY CREATING BEAN -->
    <bean id="userRepository" class="impl.UserRepositoryImpl">
        <constructor-arg ref="myLogger"/>
        <constructor-arg name="message" index="1" value="Logger has been created"/>
        <constructor-arg name="user" index="2" value="Kris"/>
    </bean>

    <bean id="someBean" class="impl.SomeBean">
        <constructor-arg name="number" type="java.lang.Integer" value="7"/>
        <constructor-arg name="string" type="java.lang.String" value="string"/>
    </bean>

    <bean id="locale" class="java.util.Locale" factory-method="getDefault"/>
    <bean id="calendar" class="java.util.GregorianCalendar" factory-method="getInstance">
        <constructor-arg ref="locale"/>
    </bean>
    <bean id="formatter" class="java.text.SimpleDateFormat" factory-method="getInstance"/>

    <bean id="person" class="domain.Person" factory-method="getInstance">
        <constructor-arg name="name" index="0" value="Kris"/>
        <constructor-arg name="age" index="1" value="25"/>
    </bean>

    <bean id="account" class="impl.AccountCreator"/>
    <bean id="someAccount" factory-bean="account" factory-method="createAccount">
        <constructor-arg value="Kris"/>
    </bean>

    <bean id="someLocale" class="java.util.Locale" factory-method="getDefault"/>
    <bean id="someUserPIC" class="domain.User">
        <constructor-arg name="name" value="Kris"/>
        <constructor-arg name="locale" ref="someLocale"/>
    </bean>
    <bean id="someBeanPIC" class="impl.SomeBean">
        <constructor-arg name="integer" value="25"/>
        <constructor-arg name="string" value="Kris"/>
        <constructor-arg name="user" ref="someUserPIC"/>
    </bean>
    <!--THE SAME BUT WITH NAMESPACE C & P-->
    <!--NAMESPACE C IS USING TO USE CONSTRUCTOR-->
    <!--NAMESPACE P IS USING TO USE SETTER METHODS-->
    <bean id="someUserPIC2" class="domain.User" c:name="Kris" c:locale-ref="someLocale"/>
    <bean id="someBeanPIC2" class="impl.SomeBean" p:integer="25" p:string="Kris" p:user-ref="someUserPIC2"/>
    <!--BETTER WAY IS USING c:_0 NOT c:name // DURING COMPILATION JAVA SWITCH EACH ONE NAMES PARAMETERS OF METHOD TO VAR...-->
    <!--EXAMPLE: <bean id="someUserPIC2" class="domain.User" c:_0="Kris" c:_1-ref="someLocale"/>-->
</beans>